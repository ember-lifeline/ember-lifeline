{
  "name": "ember-lifeline",
  "version": "5.0.0",
  "description": "Ember.js addon for lifecycle aware async tasks and DOM events.",
  "keywords": [
    "ember-addon"
  ],
  "homepage": "https://github.com/ember-lifeline/ember-lifeline#readme",
  "bugs": {
    "url": "https://github.com/ember-lifeline/ember-lifeline/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ember-lifeline/ember-lifeline.git"
  },
  "license": "MIT",
  "contributors": [
    "Robert Jackson <me@rwjblue.com>",
    "Steve Calvert <steve.calvert@gmail.com>"
  ],
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "ember build",
    "docs": "ember ts:precompile && documentation build --document-exported \"addon/index.js\" --document-exported \"addon-test-support/index.js\" --config documentation.yml -f md -o API.md && prettier --single-quote --trailing-comma es5 --write API.md && ember ts:clean",
    "lint:hbs": "ember-template-lint .",
    "lint:js": "eslint .",
    "prepublishOnly": "ember ts:precompile",
    "postpublish": "ember ts:clean",
    "start": "ember serve",
    "test": "ember test",
    "test:all": "ember try:each"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json,{app,addon,config,tests}/**/*.{js,json}": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },
  "dependencies": {
    "ember-cli-babel": "^7.1.3",
    "ember-cli-typescript": "^2.0.0"
  },
  "devDependencies": {
    "@ember/optional-features": "^1.0.0",
    "@types/ember": "^3.0.1",
    "@types/ember-qunit": "^3.0.2",
    "@types/ember-test-helpers": "^1.0.0",
    "@types/ember-testing-helpers": "^0.0.3",
    "@types/ember__test-helpers": "^0.7.8",
    "@types/qunit": "^2.5.1",
    "@types/rsvp": "^4.0.1",
    "broccoli-asset-rev": "^3.0.0",
    "documentation": "^12.0.0",
    "ember-cli": "~3.15.1",
    "ember-cli-addon-docs": "^0.6.16",
    "ember-cli-addon-docs-yuidoc": "0.2.1",
    "ember-cli-dependency-checker": "^3.1.0",
    "ember-cli-deploy": "^1.0.2",
    "ember-cli-deploy-build": "^2.0.0",
    "ember-cli-deploy-git": "^1.3.3",
    "ember-cli-deploy-git-ci": "^1.0.1",
    "ember-cli-favicon": "^2.0.0",
    "ember-cli-htmlbars": "^4.0.0",
    "ember-cli-htmlbars-inline-precompile": "^3.0.0",
    "ember-cli-inject-live-reload": "^2.0.1",
    "ember-cli-sri": "^2.1.0",
    "ember-cli-uglify": "^3.0.0",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-export-application-global": "^2.0.0",
    "ember-load-initializers": "^2.0.0",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-native-dom-helpers": "0.6.3",
    "ember-qunit": "^4.3.0",
    "ember-resolver": "^7.0.0",
    "ember-router-scroll": "^1.1.0",
    "ember-source": "~3.15.0",
    "ember-source-channel-url": "^2.0.1",
    "ember-template-lint": "^1.1.0",
    "ember-try": "^1.0.0",
    "eslint": "^6.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-ember": "^6.2.0",
    "eslint-plugin-ember-suave": "^2.0.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "fs.extra": "^1.3.2",
    "husky": "^4.0.7",
    "lint-staged": "^10.0.0",
    "loader.js": "^4.7.0",
    "prettier": "^1.10.2",
    "release-it": "^12.2.1",
    "release-it-lerna-changelog": "^1.0.3",
    "typescript": "^3.0.1"
  },
  "resolutions": {
    "@types/ember__component": "~3.0.4",
    "@types/ember__error": "~3.0.2",
    "@types/ember__object": "~3.0.6",
    "@types/ember__routing": "~3.0.6",
    "@types/jquery": "~3.3.22",
    "favicons": "5.3.0"
  },
  "engines": {
    "node": ">= 10.*"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md"
      }
    },
    "git": {
      "tagName": "v${version}",
      "changelog": "git log --pretty=format:\"* %s (%h)\" --no-merges --perl-regexp --author=\"^((?!dependabot-preview).*)$\" ${latestTag}...HEAD"
    },
    "github": {
      "release": true
    }
  }
}
