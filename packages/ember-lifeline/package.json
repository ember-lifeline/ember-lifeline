{
  "name": "ember-lifeline",
  "version": "7.0.0-beta.3",
  "description": "Ember.js addon for lifecycle aware async tasks and DOM events.",
  "keywords": [
    "ember-addon"
  ],
  "homepage": "https://github.com/ember-lifeline/ember-lifeline#readme",
  "bugs": {
    "url": "https://github.com/ember-lifeline/ember-lifeline/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ember-lifeline/ember-lifeline.git"
  },
  "license": "MIT",
  "contributors": [
    "Robert Jackson <me@rwjblue.com>",
    "Steve Calvert <steve.calvert@gmail.com>"
  ],
  "main": "dist/index.js",
  "directories": {
    "test": "tests"
  },
  "exports": {
    ".": "./dist/index.js",
    "./addon-main": "./addon-main.js",
    "./test-support": "./dist/test-support/index.js"
  },
  "scripts": {
    "prepare": "yarn build",
    "build": "FORCE_COLOR=1 npm-run-all --aggregate-output --parallel \"build:*\"",
    "build:addon": "rollup --config",
    "lint": "eslint . --ext js,ts --cache",
    "lint:fix": "eslint . --ext js,ts --fix",
    "prepublishOnly": "yarn build",
    "test": "echo 'Please refer to test-app for addon tests'"
  },
  "dependencies": {
    "@embroider/addon-shim": "^1.0.0",
    "ember-destroyable-polyfill": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.16.12",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-typescript": "^7.16.7",
    "@embroider/addon-dev": "^1.0.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/ember": "^3.16.5",
    "@types/ember-qunit": "^3.4.12",
    "@types/ember-test-helpers": "^1.0.9",
    "@types/ember-testing-helpers": "^0.0.4",
    "@types/ember__test-helpers": "^1.7.3",
    "@types/qunit": "^2.9.5",
    "@types/rsvp": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "ember-template-lint": "^4.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-ember": "^10.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-qunit": "^6.0.0",
    "rollup": "^2.67.0",
    "rollup-plugin-ts": "^2.0.5",
    "typescript": "~4.2.4",
    "walk-sync": "^3.0.0"
  },
  "peerDependencies": {
    "@ember/test-helpers": ">= 1.0.0"
  },
  "peerDependenciesMeta": {
    "@ember/test-helpers": {
      "optional": true
    }
  },
  "resolutions": {
    "favicons": "5.3.0"
  },
  "engines": {
    "node": "12.* || >= 14"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.js"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "../../CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  },
  "volta": {
    "extends": "../../package.json"
  }
}
