{
  "name": "ember-lifeline",
  "version": "5.1.0",
  "description": "Ember.js addon for lifecycle aware async tasks and DOM events.",
  "keywords": [
    "ember-addon"
  ],
  "homepage": "https://github.com/ember-lifeline/ember-lifeline#readme",
  "bugs": {
    "url": "https://github.com/ember-lifeline/ember-lifeline/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ember-lifeline/ember-lifeline.git"
  },
  "license": "MIT",
  "contributors": [
    "Robert Jackson <me@rwjblue.com>",
    "Steve Calvert <steve.calvert@gmail.com>"
  ],
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "ember build",
    "docs": "ember ts:precompile && documentation build --document-exported \"addon/index.js\" --document-exported \"addon-test-support/index.js\" --config documentation.yml -f md -o API.md && prettier --single-quote --trailing-comma es5 --write API.md && ember ts:clean",
    "lint:hbs": "ember-template-lint .",
    "lint:js": "eslint . --ext js,ts",
    "prepublishOnly": "ember ts:precompile",
    "postpublish": "ember ts:clean",
    "start": "ember serve",
    "test": "ember test",
    "test:all": "ember try:each"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json,{app,addon,config,tests}/**/*.{ts,js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "ember-cli-babel": "^7.20.5",
    "ember-cli-typescript": "^3.1.4"
  },
  "devDependencies": {
    "@ember/optional-features": "^1.3.0",
    "@types/ember": "^3.1.2",
    "@types/ember-qunit": "^3.4.8",
    "@types/ember-test-helpers": "^1.0.7",
    "@types/ember-testing-helpers": "^0.0.4",
    "@types/ember__test-helpers": "^0.7.10",
    "@types/qunit": "^2.9.1",
    "@types/rsvp": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "broccoli-asset-rev": "^3.0.0",
    "documentation": "^13.0.1",
    "ember-cli": "~3.18.0",
    "ember-cli-addon-docs": "^0.7.0",
    "ember-cli-addon-docs-yuidoc": "0.2.1",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-deploy": "^1.0.2",
    "ember-cli-deploy-build": "^2.0.0",
    "ember-cli-deploy-git": "^1.3.4",
    "ember-cli-deploy-git-ci": "^1.0.1",
    "ember-cli-favicon": "^2.2.0",
    "ember-cli-htmlbars": "^5.1.2",
    "ember-cli-inject-live-reload": "^2.0.2",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-uglify": "^3.0.0",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-export-application-global": "^2.0.1",
    "ember-load-initializers": "^2.1.1",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-native-dom-helpers": "0.6.3",
    "ember-qunit": "^4.6.0",
    "ember-resolver": "^8.0.0",
    "ember-router-scroll": "^1.1.0",
    "ember-source": "~3.18.1",
    "ember-source-channel-url": "^2.0.1",
    "ember-template-lint": "^2.8.0",
    "ember-try": "^1.4.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-ember": "^8.5.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "loader.js": "^4.7.0",
    "prettier": "^2.0.5",
    "release-it": "^13.6.1",
    "release-it-lerna-changelog": "^2.3.0",
    "typescript": "~3.9.3"
  },
  "resolutions": {
    "favicons": "5.3.0"
  },
  "engines": {
    "node": ">= 10.*"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
